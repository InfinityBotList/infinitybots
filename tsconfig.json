{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "moduleResolution": "Node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ES2022",
        "sourceMap": true,
        "lib": [
            "ES6",
            "ES2022",
            "ES2021",
            "ES2020",
            "ES2019",
            "ES2018"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}